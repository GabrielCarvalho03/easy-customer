{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@app/*": ["app/*"],
      "@dtos/*": ["dtos/*"],
      "@repositories/*": ["repositories/*"],
      "@utils/*": ["utils/*"]
    },
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "types": ["vitest/globals"]
  },

  "include": ["src", "test"]
}
